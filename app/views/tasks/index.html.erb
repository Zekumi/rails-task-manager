<h1 style="margin-left: 45px">My tasks</h1>

<ul style="list-style-type: none">
  <% @tasks.each do |task| %>
    <li><%= check_box("task", task.id, {checked: task.completed}) %> <%= link_to task.title, task_path(task) %></li>
  <% end %>
</ul>

<p> <%= link_to "Add a new task", tasks_new_path %> </p>

